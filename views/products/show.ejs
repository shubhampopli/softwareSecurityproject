<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= product.image%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= product.title%></h5>
                <p class="card-text"><%= product.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= product.location%></li>
                <li class="list-group-item text">Sold By: <%= product.seller?.username %></li>

                <li class="list-group-item">$<%= product.price%></li>
            </ul>
            <%  if( currentUser && product.seller.equals(currentUser._id))  {%>

            <div class="card-body">
                <a class="card-link btn btn-info" href="/products/<%=product._id%>/edit">Edit</a>
                <form class="d-inline" action="/products/<%=product._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <% } %>
                <!-- <form class="d-inline" action="/products/<%=product._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Buy Now!!!</button> -->
                </form>
                
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
    </div>
</div>